}

.login-btn {
  font-size: medium;
  font-family: Georgia, "Times New Roman", Times, serif;
  cursor: pointer;
  height: 50px;
  width: 80px;
  background-color: #ffa500;
  color: #fff;
  border: 2px solid #ff8c00;
  border-radius: 5px;
  transition: background-color 0.3s ease, box-shadow 0.3s ease,
    border-color 0.3s ease;
  margin-bottom: 10px;
}

.login-btn:hover {
  background-color: #ff8c00;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  border-color: #e07b00;
}

.btn {
  cursor: pointer;
  background-color: #ffa500;
  color: #fff;
  border: 2px solid #ff8c00;
  border-radius: 5px;
  transition: background-color 0.3s ease, box-shadow 0.3s ease,
    border-color 0.3s ease;
  margin-bottom: 10px;
}

.btn:hover {
  background-color: #ff8c00;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  border-color: #e07b00;
}

.filter {
  display: flex;
}

.search {
  display: flex;
  width: 10px;
}

.search-box {
  margin-right: 7px;
}

.company h1 {
  font-family: "Arial", sans-serif;
  font-size: 48px;
  color: #ff6700;
  text-shadow: 0 0 10px rgba(255, 103, 0, 0.7), 0 0 20px rgba(255, 103, 0, 0.6),
    0 0 30px rgba(255, 103, 0, 0.5), 0 0 40px rgba(255, 103, 0, 0.4),
    0 0 50px rgba(255, 103, 0, 0.3);
  transition: all 0.3s ease-in-out;
}

.company h1:hover {
  color: #ffffff;
  text-shadow: 0 0 20px rgba(255, 103, 0, 0.9), 0 0 40px rgba(255, 103, 0, 0.8),
    0 0 60px rgba(255, 103, 0, 0.7), 0 0 80px rgba(255, 103, 0, 0.6),
    0 0 100px rgba(255, 103, 0, 0.5);
  transform: scale(1.1);
}

.footer {
  background-color: #030202;
  padding: 20px;
  text-align: center;
  color: #fff;
  position: relative;
  bottom: 0;
  z-index: 1000;
  width: 100%;
}

.footer h1 {
  font-family: "Arial", sans-serif;
  font-size: 36px;
  color: #ff6700;
  text-shadow: 0 0 10px rgba(255, 103, 0, 0.7), 0 0 20px rgba(255, 103, 0, 0.6),
    0 0 30px rgba(255, 103, 0, 0.5);
  transition: all 0.3s ease-in-out;
}

.footer h1:hover {
  color: #ffffff;
  text-shadow: 0 0 20px rgba(255, 103, 0, 0.9), 0 0 40px rgba(255, 103, 0, 0.8),
    0 0 60px rgba(255, 103, 0, 0.7), 0 0 80px rgba(255, 103, 0, 0.6);
  transform: scale(1.05);
}

.footer h5 {
  font-family: "Arial", sans-serif;
  font-size: 14px;
  color: #888;
  text-shadow: 0 0 5px rgba(255, 103, 0, 0.5);
  transition: color 0.3s ease-in-out, text-shadow 0.3s ease-in-out;
}

.footer h5:hover {
  color: #ff6700;
  text-shadow: 0 0 10px rgba(255, 103, 0, 0.7), 0 0 20px rgba(255, 103, 0, 0.6);
}

body {
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  margin: 0;
}

.menuBox {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.categorySection {
  margin-bottom: 20px;
}

.categoryTitle {
  font-size: 1.5em;
  margin-bottom: 10px;
}

.categoryItems {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.menuCard {
  border: 1px solid black;
  background-color: rgba(238, 84, 61, 0.321);
  padding: 5px;
  margin: 6px;
  transition: transform 0.3s ease;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.menu-img {
  width: 100px;
  height: 100px;
  object-fit: cover;
}

.addcart-btn {
  background-color: #e69a3e;
  color: #000000;
  cursor: pointer;
}

.user-card {
  padding: 10px;
  border: 1px solid black;
}

.user-card {
  background: linear-gradient(135deg, #ff802c, #83dc8d);
  border-radius: 15px;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  color: white;
  overflow: hidden;
  text-align: center;
  transition: transform 0.3s, box-shadow 0.3s;
  width: 350px;
  margin: auto;
}

.user-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
}

.user-card img {
  border-radius: 50%;
  margin-top: 20px;
  width: 100px;
  height: 100px;
  border: 3px solid rgb(68, 255, 102);
}

.user-card h2 {
  font-size: 1.5em;
  margin: 20px 0 10px 0;
}

.user-card h3 {
  font-size: 1.2em;
  margin: 10px 0;
}

.user-card h4 {
  font-size: 1em;
  margin-bottom: 20px;
  color: #000000;
}

.status-dot {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  display: inline-block;
  position: relative;
}

.online {
  background-color: #00ff00;
  box-shadow: 0 0 5px #00ff00;
  animation: pulseGreen 1.5s infinite;
}

.offline {
  background-color: #ff0000;
  box-shadow: 0 0 5px #ff0000;
  animation: pulseRed 1.5s infinite;
}

@keyframes pulseGreen {
  0% {
    box-shadow: 0 0 5px 5px #00ff00;
  }
  50% {
    box-shadow: 0 0 15px 15px #00ff00;
  }
  100% {
    box-shadow: 0 0 5px 5px #00ff00;
  }
}

@keyframes pulseRed {
  0% {
    box-shadow: 0 0 5px 5px #ff0000;
  }
  50% {
    box-shadow: 0 0 15px 15px #ff0000;
  }
  100% {
    box-shadow: 0 0 5px 5px #ff0000;
  }
}

.grocery {
  padding: 10px;
  justify-content: space-around;
  border: 1.5px solid rgb(0, 0, 0);
}
